  <body>

	<div id="kont">
	
	<div id="photo_upload_ederken" style="
	transition: .5s width;
    width: 0%;
    background: rgba(195, 222, 191, 0.86);
    height: 100%;
    position: absolute;
    z-index: 10;">
		
			<div  style="display:none;margin:0 auto;margin-top:50px;padding:20px;background:rgba(0,0,0,0.7);border-radius:20px;">
		<h1 style="color:white">Image upload</h1>
		<form action="/upload" method="POST" enctype="multipart/form-data">
			<input class="form-control" type="file" name="shekil"><br>
			<a style="margin-top:20px;" href="">Yukle</a>
		</form>
	</div>
		
		
	</div> 
	
		<div style="position:absolute;top:2px;left :2px;z-index:100;cursor:pointer;" class="back"><img src="https://cdn3.iconfinder.com/data/icons/line/36/arrow_left-512.png" height="46px"></div>
		<div id="name" style="position: absolute; left: 130px; line-height: 50px; font-family: verdana; font-weight: bold; color: white;"><%= un  %></div>
		<div class="img"></div>
		<div class="bar"></div>
		<div class="smile"><img style="margin-left:3px;" src="images/camera.png" height="45"></div>
		<div class="text"><textarea></textarea></div>
		<div class="send" style="cursor: pointer;"><img src="http://image.flaticon.com/icons/png/512/15/15537.png" height="40"></div>
		<div class="footer"></div>
		<div id="backgroundofkont">
			<ul id="messages"> 

			</ul>
		</div>
	</div>
	
	
	
	<div id="ses"></div>
	
    <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
    var socket = io();
	
	function addZero(i) {
 		if (i < 10) {
 			i = "0" + i;
 		}
 		return i;
 	}
	
	
	$(document).ready(function(){
		
		$('.smile').click(function(){
			$('#photo_upload_ederken').css({'width':'100%'});
			$('#photo_upload_ederken div').fadeIn();
		});
		
		$('.back').click(function(){
			$('#photo_upload_ederken').css({'width':'0%'});
			$('#photo_upload_ederken div').fadeOut();
		});
		$.ajax({
			'type' : 'GET',
			url: "/m",
			success: function(data){
				console.log(data);
				var datasayi = data.length;
					for(var i=0;i<datasayi;i++){
						var klass = data[i].gonderen;
						var tarix = data[i].tarix;
						$('#messages').append('<li class="'+klass+'">'+(data[i].mesaj)+'<span class="saat">'+tarix+'</span></li>');
					}
				$("#kont #backgroundofkont").animate({ scrollTop: 10000 }, "slow");
			}
		});
	
		$("#kont").draggable();
	
		$('.send').click(function(){
			  socket.emit('chat message', [$('.text textarea').val(), '<%= un %>']);
			  $('.text textarea').val('');
			  return false;		
		});

		$('#kont .text textarea').keypress(function(e){
			if(e.which == 13 && !e.shiftKey){
			  socket.emit('chat message', [$('.text textarea').val(), '<%= un %>']); 
			  $('.text textarea').val('');
			  return false;
			}
		});  
		
		socket.on('chat message', function([msg,gonderen]){
			if(msg!='' && msg!=' '){
				
				var tarix = new Date();
 				var saat = addZero(tarix.getHours()) + ":" + addZero(tarix.getMinutes());
 				$('#messages').append('<li class="'+gonderen+'">'+(msg)+'<span class="saat">'+saat+'</span></li>');
				document.getElementById("ses").innerHTML='<audio autoplay="autoplay"><source src="https://notificationsounds.com/message-tones/just-like-that-404/download/mp3" type="audio/mpeg" /><source src="https://notificationsounds.com/message-tones/just-like-that-404/download/mp3" /></audio>';
				$("#kont #backgroundofkont").animate({ scrollTop: 10000 }, "slow");
			}
		});
		
			
	});
	
  </script>
  </body>
